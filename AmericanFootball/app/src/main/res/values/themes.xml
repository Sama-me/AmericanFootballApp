<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">#0057d9</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ChronometerButtons">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TeamName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/teamName_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/teamName_marginBottom</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">none</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TeamScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/teamScore_marginBottom</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:text">@string/initial_score</item>
        <item name="android:textColor">@color/scoreTextView</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScorePoints">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/scorePoints_marginRL</item>
        <item name="android:layout_marginRight">@dimen/scorePoints_marginRL</item>
        <item name="android:layout_marginBottom">@dimen/scorePoints_marginBottom</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/resetButton_marginRL</item>
        <item name="android:layout_marginRight">@dimen/resetButton_marginRL</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>